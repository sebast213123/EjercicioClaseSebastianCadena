<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjercicioClaseSebastianCadena.PaginaFlex"
             Title="PaginaFlex">
    <FlexLayout Direction="Row" JustifyContent="Start" AlignItems="Center" Padding="10">

        <BoxView WidthRequest="50" HeightRequest="50" BackgroundColor="Red" Margin="5"/>
        <BoxView WidthRequest="50" HeightRequest="50" BackgroundColor="Blue" Margin="5"/>
        <BoxView WidthRequest="50" HeightRequest="50" BackgroundColor="Green" Margin="5"/>
        <BoxView WidthRequest="50" HeightRequest="50" BackgroundColor="Yellow" Margin="5"/>

        
        <Label Text="Sebastian Cadena"
               FontSize="20"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="Center"
               Margin="10" />


        <Button
    x:Name="Boton4"
    Text="Ir a Pagina Abs " 

    Clicked="Boton4_Clicked"
         VerticalOptions="End"
            HorizontalOptions="End"
        />


    </FlexLayout>
</ContentPage>