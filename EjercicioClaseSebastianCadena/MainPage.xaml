<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjercicioClaseSebastianCadena.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            
            <Image
                Source="https://blog.phonehouse.es/wp-content/uploads/2010/07/movistar_logo_sombra.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />


            <Label
                Text="Recarga de Celular"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            
            <Entry
                x:Name="TelefonoEntry"
                Placeholder="Número de teléfono"
                Keyboard="Chat"
                Margin="0,10,0,10" />

            
            <Entry
                x:Name="NombreEntry"
                Placeholder="Nombre"
                Margin="0,10,0,10" />

            
            <Button
                x:Name="RecargarButton"
                Text="Recargar"
                Clicked="Boton1_Clicked"
                Padding="10"
                BackgroundColor="DodgerBlue"
                TextColor="White" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
